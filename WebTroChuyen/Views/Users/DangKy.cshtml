@model WebTroChuyen.Models.NguoiDung
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<div class="container"> 
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mt-5">ĐĂNG KÝ</h2>
            <div class="card my-5">
                <div class="card-body p-lg-5">
                    @using (Html.BeginForm("DangKy", "Users", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <p>Tên người dùng</p>
                            @Html.TextBoxFor(m => m.TenNguoiDung, new { @class = "form-control", placeholder = "Tên người dùng" })
                            @Html.ValidationMessageFor(m => m.TenNguoiDung, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <p>Tài khoản</p>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Tài Khoản" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <p>Mật khẩu</p>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <p>Xác nhận mật khẩu</p>
                            @Html.Password("ConfirmPassword", null, new { @class = "form-control", placeholder = "Xác nhận mật khẩu" })
                            @Html.ValidationMessage("ConfirmPassword", "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <p>Email</p>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            <p>Avatar</p>
                            <input type="file" class="form-control" id="AvatarFile" name="AvatarFile" accept="image/*" />
                            @Html.ValidationMessage("Avatar", "", new { @class = "text-danger" }) <!-- Thêm thông báo lỗi cho Avatar -->
                        </div>
                        <!-- Hiển thị hình ảnh đã tải lên bên dưới phần Avatar -->
                        <div class="mb-3">
                            <p>Hình ảnh đã tải lên:</p>
                            <img id="AvatarPreview" src="#" alt="Avatar Preview" style="max-width: 100%;" />
                        </div>
                        <div class="mb-3">
                            <p>Giới tính</p>
                            <label>
                                @Html.RadioButtonFor(m => m.GioiTinh, "0") Nam <!-- Sử dụng RadioButtonFor để liên kết giới tính với model -->
                            </label>
                            <label>
                                @Html.RadioButtonFor(m => m.GioiTinh, "1") Nữ <!-- Sử dụng RadioButtonFor để liên kết giới tính với model -->
                            </label>
                            @Html.ValidationMessageFor(m => m.GioiTinh, "", new { @class = "text-danger" }) <!-- Thêm thông báo lỗi cho GioiTinh -->
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100">Đăng ký</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- JavaScript để hiển thị hình ảnh đã tải lên -->
<script>
    document.getElementById('AvatarFile').addEventListener('change', function (e) {
        var preview = document.getElementById('AvatarPreview');
        preview.src = URL.createObjectURL(e.target.files[0]);
    });
</script>