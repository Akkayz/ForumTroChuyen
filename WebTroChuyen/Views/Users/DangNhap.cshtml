@model WebTroChuyen.Models.NguoiDung
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mt-5">ĐĂNG NHẬP</h2>
            <div class="card my-5">
                <div class="card-body p-lg-5">
                    <div class="text-center mb-3">
                        <img src="~/Images/Logo/FrogPepe.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle"
                             width="150" alt="profile">
                    </div>
                    @using (Html.BeginForm("DangNhap", "Users", FormMethod.Post))
                    {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <p>Tài khoản</p>
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                    <div class="mb-3">
                        <p>Mật khẩu</p>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
                    </div>
                    }
                    <div class="text-center mt-3">
                        <small class="text-danger">@Html.ValidationMessage("")</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>