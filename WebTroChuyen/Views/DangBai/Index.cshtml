@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}

<div class="container bg-white" style="max-width: 1000px;">
    <div class="row">
        <div class="col-md-8">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#">Mới</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Bình luận mới</a>
                </li>
