                </li>
            </ul>
            <div style="margin-bottom: 20px;"></div> <!-- Khoảng cách giữa danh sách và bài viết -->
            <section class="list-view">
                <article class="border p-3 mb-3">
                    <!-- Phần 1: Thông tin tài khoản -->
                    <div class="account-frame d-flex" style="max-height: 40px;">
                        <img src="~/Images/Users/1385117.jpg" width="40" height="40" alt="Avatar" class="avatar me-3">
                        <div class="user-info">
                            <h6 class="mb-0" style="opacity: 0.5;">Akkay</h6>
                            <span class="timestamp" style="opacity: 0.5;">Cách đây 5 phút</span>
                        </div>
                        <div class="user-level d-flex align-items-center justify-content-center rounded bg-primary text-white" style="width: 60px; height: 30px;">
                            <div class="level-info">
                                <span class="user-level-text">Cấp 5</span>
                            </div>
                        </div>
                        <span class="category" style="margin-left: 20px; opacity: 0.7;">Thư giãn - Chém gió</span>
                    </div>

                    <!-- Phần 2: Tiêu đề nội dung đăng -->
                    <h2 class="mt-3">Tiêu đề bài viết</h2>
                    <p>Nội dung bài viết...</p>

                    <!-- Phần 3: Ảnh đăng -->
                    <figure class="mt-3">
                        <img src="~/Images/Chats/2-thi-ghk1.jpg" alt="Mô tả ảnh" class="img-fluid">
                    </figure>

                    <!-- Phần 4: Footer của bài viết -->
