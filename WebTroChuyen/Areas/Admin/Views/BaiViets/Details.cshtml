@model WebTroChuyen.Models.BaiViet

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-3">
    <h2 class="mb-4">Chi tiết bài viết</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@Model.TieuDe</h5>
            <p class="card-text">
                <strong>Nội dung:</strong>
                <br />
                @Html.DisplayFor(model => model.NoiDung)
            </p>
            <p class="card-text">
                <strong>Ngày đăng:</strong> @Model.NgayDang.ToString("dd-MM-yyyy HH:mm:ss")
            </p>

            @if (!string.IsNullOrEmpty(Model.HinhAnh))
            {
                <div class="mb-3">
                    <strong>Hình ảnh:</strong>
                    <br />
                    <img src="~/Images/UserImagePost/@Model.HinhAnh" alt="Hình ảnh" class="img-fluid" style="max-width: 100%;" />
                </div>
            }
            <p class="card-text">
                <strong>Trạng thái:</strong> @Model.TrangThai
            </p>
            <p class="card-text">
                <strong>Danh mục:</strong> @Model.DanhMuc.TenDanhMuc
            </p>
            <p class="card-text">
                <strong>Người đăng:</strong> @Model.NguoiDung.TenNguoiDung
            </p>
        </div>
    </div>
    <div class="mt-3">
        <a href="@Url.Action("Edit", new { id = Model.BaiVietID })" class="btn btn-primary">Chỉnh sửa</a>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>